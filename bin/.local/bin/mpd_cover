#!/bin/sh

COVER=/tmp/cover.jpg

ffmpeg -i "/home/luc/Musique/$(mpc current -f %file%)" "$COVER" -y &>/dev/null
STATUS=$?
if [ "$STATUS" -eq 0 ];then
	image=$COVER
	else
        DIR="/home/luc/Musique/$(dirname "$(mpc current -f %file%)")"
	cd "$DIR" || exit
	image=$(ls | grep -E '.jpg|.png|.jpeg' || echo "$HOME/Musique/fallback.png")
        convert "$image" "$COVER"
fi

notify-send -t 3000 -i "$(readlink -f "$image")" "â™ª Now Playing:

$(mpc --format '%track% - %title%' | head -n1)" "$(mpc --format '%album%\nby %artist%\n\n%time%' | head -n4)"
