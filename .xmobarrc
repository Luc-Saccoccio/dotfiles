-- XMobar config
--
Config { font    = "xft:SpaceMono Nerd Font:style=Regular:size=9"
       , additionalFonts = [ "xft:monospace:size=10" ]
       , bgColor = "#000000"
       , fgColor = "#afd75f"
       , position = Top
       , lowerOnStart = True
       , hideOnStart = False
       , allDesktops = True
       , persistent = True
       , iconRoot = "/home/luc/Images/xpm/"  -- default: "[NERD]"
       , commands = [ Run Date "%b %d %Y %H:%M:%S" "date" 10
                    , Run Network "enp4s0" ["-t", "up <rx> dn <tx>", "-S", "True"] 10
                    , Run Cpu ["-t", "cpu <bar> (<total>%)","-H","50","--high","red"] 10
                    , Run Memory ["-t", "mem <usedbar> (<usedratio>%)"] 10
                    , Run DiskU [("/home", "home <usedbar> (<free>)"), ("/", "root <usedbar> (<free>)")] [] 3600
                    , Run MPD ["-t", "<artist> <title> {<album>} <state>"] 10
		    , Run Volume "default" "Master" ["-t", "Vol: <volumebar> <volume>% <status>"] 10
		    , Run BatteryP ["BAT0"] ["-t", "Bat: <left>% (<timeleft>)"] 10
		    , Run StdinReader
                    ]
                    
       , sepChar = "%"
       , alignSep = "}{"
       , template = "<icon=haskell.xpm/> %StdinReader% }{ <fc=#3DE163>%mpd%</fc> <fc=#FF4143>%enp4s0%</fc> <fc=#ffff5f>%cpu%</fc> <fc=#ff5f87>%memory%</fc> <fc=#87afd7>%disku%</fc> <fc=#6FD599>%default:Master%</fc> %battery% <fc=#afd75f>%date%</fc> "
       }
